pipeline {
    agent {
        docker {
            image 'node:18'
        }
    }
    parameters {
        booleanParam(name: 'RUN_PIPELINE', defaultValue: false, description: 'Check to run the pipeline')
    }
    stages {
        stage('Manual Trigger') {
            when {
                expression { params.RUN_PIPELINE }
            }
            steps {
                echo "Pipeline manually triggered"
            }
        }
        stage('Checkout') {
            when {
                expression { params.RUN_PIPELINE }
            }
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            when {
                expression { params.RUN_PIPELINE }
            }
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            when {
                expression { params.RUN_PIPELINE }
            }
            steps {
                sh 'npm test'
            }
        }
        stage('Build App') {
            when {
                expression { params.RUN_PIPELINE }
            }
            steps {
                sh './scripts/build.sh'
            }
        }
        stage('Run App') {
            when {
                expression { params.RUN_PIPELINE }
            }
            steps {
                sh 'npm start'
            }
        }
    }
}
